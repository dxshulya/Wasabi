<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/task_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp"
            android:text="@string/task_number"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_formula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_number"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp"
            android:text="@string/task_formula"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_formula"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp"
            android:text="@string/task_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_text"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp"
            android:text="@string/task_answer"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/task_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="6dp"
            android:src="@drawable/ic_favorite_border"
            app:tint="@color/red" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>